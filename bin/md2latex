#!/usr/bin/env python

import sys
import md2latex

if len(sys.argv) < 2:
    print >> sys.stderr, 'Usage: md2latex <input.md> [output.tex]'
    sys.exit(1)

with open(sys.argv[1]) as f:
    converter = MarkdownToLatexConverter()
    latex = converter.convert(f.read())

if len(sys.argv) == 2:
    print latex
else:
    with open(sys.argv[2], 'w') as out:
        out.write(latex)
